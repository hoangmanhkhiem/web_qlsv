@model qlsv.Models.SinhVien

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-4">
            <!-- Avatar and Basic Info -->
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">@Model.HoTen</h5>
                    <p class="text-muted">@Model.IdSinhVien</p>
                    <p class="text-muted">@Model.ChuyenNganh</p>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <!-- Tab Navigation -->
            <ul class="nav nav-tabs" id="studentProfileTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="details-tab" data-bs-toggle="tab" href="#details" role="tab">Chi tiết</a>
                </li>
                <!-- <li class="nav-item">
                    <a class="nav-link" id="history-tab" data-bs-toggle="tab" href="#history" role="tab">Lịch sử học</a>
                </li> -->
            </ul>

            <div class="tab-content" id="studentProfileTabContent">
                <!-- Personal Details Tab -->
                <div class="tab-pane fade show active mt-3" id="details" role="tabpanel">
                    <form>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Họ tên</label>
                                <input type="text" class="form-control" value="@Model.HoTen" disabled>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Mã sinh viên</label>
                                <input type="text" class="form-control" value="@Model.IdSinhVien" disabled>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Lớp</label>
                                <input type="text" class="form-control" value="@Model.Lop" disabled>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Chuyên ngành</label>
                                <input type="text" class="form-control" value="@Model.ChuyenNganh" disabled>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Ngày sinh</label>
                                <input type="date" class="form-control" value="@Model.NgaySinh?.ToString("yyyy-MM-dd")" disabled>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Địa chỉ</label>
                                <input type="text" class="form-control" value="@Model.DiaChi" disabled>
                            </div>
                        </div>
                    </form>
                </div>

                <!-- Lịch sử học Tab
                <div class="tab-pane fade mt-3" id="history" role="tabpanel">
                    <h5>Lịch sử học</h5>
                     Content for academic history can go here
                </div> -->

                
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
