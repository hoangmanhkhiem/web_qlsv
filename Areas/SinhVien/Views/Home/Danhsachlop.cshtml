

@model IEnumerable<qlsv.Models.LopHocPhan>

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh sách lớp học</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <div class="container">
        <header class="my-4">
            <h2>Học tập / <span style="font-weight: bold;">Danh sách lớp học</span></h2>
        </header>

        <!-- Lặp qua các lớp học phần -->
        <div class="row">
            @foreach (var lopHocPhan in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-header bg-primary text-white d-flex justify-content-between">
                            <span>Đang diễn ra</span>
                            <button class="btn btn-light btn-sm p-1">
                                <i class="fas fa-info-circle text-primary"></i>
                            </button>
                        </div>
                        <div class="card-body text-center">
                            <!-- Ảnh khóa học -->
                            <img src="https://via.placeholder.com/200" alt="Course Logo" class="img-fluid mb-3" style="width: 200px;">
                            <!-- Tên học phần -->
                            <h5 class="card-title">@lopHocPhan.TenHocPhan</h5>
                            <!-- Thời gian diễn ra -->
                            @if (lopHocPhan.ThoiGianLopHocPhans.Any())
                            {
                                var thoiGianHoc = lopHocPhan.ThoiGianLopHocPhans.First().IdThoiGianNavigation;
                                <p class="card-text">
                                    @thoiGianHoc.Ngay.ToString("dd/MM/yyyy")
                                    - @thoiGianHoc.ThoiGianBd.ToString(@"hh\:mm") 
                                    - @thoiGianHoc.ThoiGianKt.ToString(@"hh\:mm")
                                </p>
                            }
                            <!-- Tên giảng viên -->
                            <p class="card-text font-weight-bold">
                                Giảng viên: @lopHocPhan.IdGiaoVienNavigation?.TenGiaoVien ?? "Chưa cập nhật"
                            </p>
                        </div>
                        <div class="card-footer d-flex justify-content-between align-items-center">
                            <span class="text-success font-weight-bold"><i class="fas fa-users"></i> 3 / 5</span>
                            <span class="text-primary font-weight-bold">10,000,000 VNĐ</span>
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.9.2/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
